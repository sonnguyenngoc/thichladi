<% content_for :metas do %>
    <!-- for Facebook -->
    <meta property="og:url" content="<%= request.url %>"/>
    <meta property="og:type" content="website" />
    <% if @title.present? %>
        <meta property="og:title" content="<%= @title.html_safe %>"/>
    <% else %>
        <meta property="og:title" content="ThichLaDi.Info"/>
    <% end %>
    <% if @meta_description.present? %>
        <meta property="og:description" content="<%= @meta_description %>"/>
    <% else %>
        <meta property="og:description" content="Du Lịch Khám Phá Mới - Chuyên tour Miền Tây, Phú Quốc, Bình Ba, Bình Hưng, Nam Du, Hải Tặc. Chuyên tour đoàn, tổ chức event, team building."/>
    <% end %>
    <meta property="og:image" content="http://thichladi.info/frontend/assets/images/image-for-share.png"/>
<% end %>

<!-- Page Container -->
<div class="page-container ptb-60">
    <div class="container">
        <!-- Contact Us Area -->
        <div class="contact-area contact-area-v1 panel">
            <div class="row row-tb-20">
                <div class="col-xs-12">
                    <div class="embed-responsive embed-responsive-16by9 custom-embed-responsive">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3919.64613811227!2d106.66295461422611!3d10.761731392331482!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x31752ee5856a8659%3A0x47ee6a6f6d9120b8!2zMTE0IE5nw7QgUXV54buBbiwgcGjGsOG7nW5nIDUsIFF14bqtbiAxMCwgSOG7kyBDaMOtIE1pbmgsIFZp4buHdCBOYW0!5e0!3m2!1svi!2s!4v1502876194747" width="400" height="300" frameborder="0" style="border:0" allowfullscreen></iframe>
                    </div>
                </div>
            </div>
            <div class="ptb-30 prl-30">
                <div class="row row-tb-20">
                    <div class="col-xs-12 col-md-6">
                        <div class="contact-area-col contact-info">
                            <div class="contact-info">
                                <h3 class="t-uppercase h-title mb-20">THÔNG TIN LIÊN HỆ</h3>
                                <ul class="contact-list mb-40">
                                    <li>
                                        <span class="icon lnr lnr-map-marker"></span>
                                        <h5>ĐỊA CHỈ</h5>
                                        <p class="color-mid">114 Ngô Quyền, Phường 5, Quận 10, Tp Hồ Chí Minh, Việt Nam</p>
                                    </li>
                                    <li>
                                        <span class="icon lnr lnr-envelope"></span>
                                        <h5>Email</h5>
                                        <p class="color-mid"><a href="mailto:info@newdiscovery.vn" class="color-email">info@newdiscovery.vn</a> - <a href="mailto:info@cungmuadulich.net" class="color-email">info@cungmuadulich.net</a></p>
                                    </li>
                                    <li>
                                        <span class="icon lnr lnr-phone-handset"></span>
                                        <h5>Hỗ trợ khách hàng</h5>
                                        <p class="color-mid"><a href="tel:0919515059" class="color-hotline">0919 515 059</a> - <a href="tel:0919623535" class="color-hotline">0919 623 535</a</p>
                                    </li>
                                </ul>
                                <ul class="social-icons social-icons--colored list-inline">
                                    <li class="social-icons__item">
                                        <a href="#"><i class="fa fa-facebook"></i></a>
                                    </li>
                                    <li class="social-icons__item">
                                        <a href="#"><i class="fa fa-google-plus"></i></a>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-6">
                        <div class="contact-area-col contact-form">
                            <h3 class="t-uppercase h-title mb-20">GỬI LỜI NHẮN</h3>
                            <%= form_for '', url: erp_thichladi.contact_path, html: {id: "message"} do |f| %>
                                <div class="form-group">
                                    <label>HỌ & TÊN <span class="text-required">*</span></label>
                                    <input type="text" name="message[name]" placeholder="Vui lòng nhập họ & tên tại đây....." class="form-control required">
                                </div>
                                <div class="form-group">
                                    <label>ĐỊA CHỈ EMAIL <span class="text-required">*</span></label>
                                    <input type="email" name="message[email]" placeholder="Vui lòng nhập email tại đây....." class="form-control required">
                                </div>
                                <div class="form-group">
                                    <label>SỐ ĐIỆN THOẠI <span class="text-required">*</span></label>
                                    <input type="text" name="message[phone]" placeholder="Vui lòng nhập số điện thoại tại đây....." class="form-control required">
                                </div>
                                <div class="form-group">
                                    <label>LỜI NHẮN <span class="text-required">*</span></label>
                                    <textarea rows="5" name="message[content]" placeholder="Vui lòng nhập lời nhắn tại đây....." class="form-control required"></textarea>
                                </div>
                                <button class="btn">GỬI LỜI NHẮN</button>
                            <% end %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Contact Us Area -->
    </div>
</div>
<!-- End Page Container -->