<div class="col-xs-12">
    <!-- Subscribe Widget -->
    <div class="widget subscribe-widget panel pt-20 prl-20">
        <h3 class="widget-title h-title">ĐĂNG KÝ NHẬN TIN GIẢM GIÁ</h3>
        <div class="widget-content ptb-30">
            <p class="color-mid mb-20">Chúng tôi hoàn toàn không spam hay chia sẻ với đơn vị thứ ba.</p>
            <%= form_for Erp::Newsletters::Newsletter.new, url: erp_thichladi.newsletters_path, html: {class: ""} do |f| %>
                <div class="input-group">
                    <input type="email" name="newsletter[email]" size="55" class="form-control" placeholder="Email đăng ký..." required>
                    <span class="input-group-btn">
                        <button class="btn" type="submit">Đăng ký ngay</button>
                    </span>
                </div>
            <% end %>
        </div>
    </div>
    <!-- End Subscribe Widget -->
</div>