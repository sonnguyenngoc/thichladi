<% if Erp::MiniStores::Article.get_newest_articles.count > 2 %>
<section class="section latest-news-area blog-area blog-grid blog-3-col">
    <header class="panel ptb-15 prl-20 pos-r mb-5">
        <h3 class="section-title font-18">Tin Tức Mới Nhất</h3>
    </header>
    <div class="row row-tb-20">
        <% Erp::MiniStores::Article.newest_articles(3).each do |blog| %> 
            <!-- Blog Post -->
            <div class="blog-post col-xs-12 col-sm-6 col-md-4">
                <article class="entry panel">
                    <figure class="entry-media post-thumbnail embed-responsive embed-responsive-16by9" data-bg-img="<%= blog.image_url.medium %>">
                        <div class="entry-date">
                            <h4><%= blog.created_at.strftime("%d") %></h4>
                            <h6><%= blog.created_at.strftime("%m") %></h6>
                        </div>
                    </figure>
                    <div class="entry-wrapper pt-20 pb-10 prl-20">
                        <header class="entry-header">
                            <h4 class="entry-title mb-10 mb-md-15 font-xs-16 font-sm-18 font-md-16 font-lg-16">
                                <%= link_to blog.article_name, blog_detail_link(blog), title: blog.article_name %>
                            </h4>
                            <div class="entry-meta mb-10">
                                <ul class="tag-info list-inline">
                                    <li>
                                        <i class="icon fa fa-user"></i>
                                        Đăng bởi: Du Lịch Khám Phá Mới
                                    </li>                                                    
                                </ul>
                            </div>
                        </header>
                        <div class="entry-content">
                            <p class="entry-summary text-justify">
                                <%= truncate(strip_tags(blog.content.html_safe), length: 130) if blog.content.present? %>
                            </p>
                        </div>
                        <footer class="entry-footer text-right">
                            <a href="<%= blog_detail_link(blog) %>" class="more-link btn btn-link">
                                XEM TIẾP BÀI VIẾT
                                <i class="icon fa fa-long-arrow-right"></i>
                            </a>
                        </footer>
                    </div>
                </article>
            </div>
            <!-- End Blog Post -->
        <% end %>
    </div>
</section>
<% end %>