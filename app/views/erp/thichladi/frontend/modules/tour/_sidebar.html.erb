<aside class="sidebar blog-sidebar">
    <div class="row row-tb-10">
        <div class="col-xs-12">
            <div class="widget single-deal-widget panel ptb-30 prl-20">
                <div class="widget-body text-center">
                    <h2 class="mb-20 h3"><%= tour.name %></h2>
                    <ul class="deal-meta list-inline mb-10 color-mid">
                        <% if tour.area_position.present? %>
                            <li><i class="ico fa fa-map-marker mr-10"></i><%= tour.area_position %></li>
                        <% end %>
                        <% if tour.transportation.present? %>
                            <li><i class="ico fa fa-rocket mr-10"></i><%= tour.transportation %></li>
                        <% end %>
                        <% if tour.time_line.present? %>
                            <li><i class="ico fa fa-clock-o mr-10"></i><%= tour.time_line %></li>
                        <% end %>
                    </ul>
                    <p class="color-muted text-justify"><%= tour.description if tour.description.present? %></p>
                    <div class="price mb-20">
                        <h2 class="price">
                            <% if tour.is_discount == true && tour.price_discount.present? && tour.percent_discount.present? %>
                                <span class="price-sale"><%= format_price(tour.price) %></span>
                                <%= format_price(tour.price_discount) %>
                            <% else %>
                                <%= format_price(tour.price) %>
                            <% end %>
                        </h2>
                    </div>
                    <div class="buy-now mb-20">
                        <a href="" target="_blank" class="btn btn-block btn-lg">
                            <i class="fa fa-check font-16 mr-10"></i> ĐẶT TOUR NGAY
                        </a>
                    </div>
                    <%= count_down_detail(tour.date_discount_start, tour.date_discount_end) %>
                </div>
            </div>
        </div>        
        <div class="col-xs-12">
            <!-- Latest Deals Widegt -->
            <div class="widget latest-deals-widget panel prl-20">
                <div class="widget-body ptb-20">
                    <div class="owl-slider" data-loop="true" data-autoplay="true" data-autoplay-timeout="10000" data-smart-speed="1000" data-nav-speed="false" data-nav="true" data-xxs-items="1" data-xxs-nav="true" data-xs-items="1" data-xs-nav="true" data-sm-items="1" data-sm-nav="true" data-md-items="1" data-md-nav="true" data-lg-items="1" data-lg-nav="true">
                        <% (0..4).each do |deal_tour| %>
                        <div class="latest-deals__item item">
                            <figure class="deal-thumbnail embed-responsive embed-responsive-4by3" data-bg-img="/frontend/assets/images/deal_01.jpg">
                                <div class="label-discount top-10 right-10">-30%</div>
                                <ul class="deal-actions top-10 left-10">
                                    <li class="share-btn">
                                        <span>
                                            <a href="" title="Chia sẻ trên facebook" class="download-document"><i class="fa fa-share-alt"></i></a>
                                        </span>
                                    </li>
                                    <li>                                                
                                    <span>
                                        <a href="" title="Tải lịch trình tour" class="download-document"><i class="fa fa-download"></i></a>
                                    </span>                                                
                                </li>
                                </ul>
                                <div class="deal-about p-10 pos-a bottom-0 left-0">
                                    <div class="rating mb-10">
                                        <span class="rating-stars rate-allow" data-rating="4">
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                            <i class="fa fa-star-o"></i>
                                        </span>
                                    </div>
                                    <h5 class="deal-title mb-10">
                                        <%= link_to "Tour Du Lịch Phan Thiết 3 Ngày 2 Đêm", erp_thichladi.tour_detail_path, title: "" %>
                                    </h5>
                                </div>
                            </figure>
                        </div>
                        <% end %>
                    </div>
                </div>
            </div>
            <!-- End Latest Deals Widegt -->
        </div>
        <div class="col-xs-12">
            <!-- Recent Posts -->
            <div class="widget recent-posts panel pt-20 prl-20">
                <h3 class="widget-title h-title">Tin Du Lịch Mới Nhất</h3>
                <div class="widget-body ptb-30">
                    <% (0..4).each do |blog_lastest| %>
                    <div class="recent-post media">
                        <div class="post-thumb media-left">
                            <%= link_to image_tag("/frontend/assets/images/thumb_1.jpg", title: "",
                                        alt: "", class: "media-object"), "", title: "" %>
                        </div>
                        <div class="media-body">
                            <h5 class="font-15 mb-10">
                                <%= link_to "Tiêu đề bài viết", erp_thichladi.blog_detail_path, title: "" %>
                            </h5>
                            <ul class="post-meta list-inline">
                                <li><i class="ico fa fa-calendar mr-5"></i><%= "26/09/2017" %></li>
                            </ul>
                        </div>
                    </div>
                    <% end %>
                </div>
            </div>
            <!-- End Recent Posts -->
        </div>
        <div class="col-xs-12">
            <!-- Subscribe Widget -->
            <div class="widget subscribe-widget panel pt-20 prl-20">
                <h3 class="widget-title h-title">Đăng ký nhận tin</h3>
                <div class="widget-content ptb-30">
                    <p class="color-mid mb-20">Đăng ký nhận thông tin tour giảm giá. Chúng tôi hoàn toàn không spam hay chia sẻ với đơn vị thứ 3.</p>
                    <form method="post" action="#">
                        <div class="input-group">
                            <input type="email" class="form-control" placeholder="Email đăng ký nhận thông tin tour giảm giá" required="required">
                            <span class="input-group-btn">
                                <button class="btn" type="submit">Đăng ký ngay</button>
                            </span>
                        </div>
                    </form>

                </div>
            </div>
            <!-- End Subscribe Widget -->
        </div>
        <div class="col-xs-12">
            <!-- Contact Us Widget -->
            <div class="widget contact-us-widget panel pt-20 prl-20">
                <h3 class="widget-title h-title">Góp Ý & Liên Hệ</h3>
                <div class="widget-body ptb-30">
                    <%= link_to '<i class="mr-10 font-15 fa fa-envelope-o"></i> Gửi Lời Nhắn'.html_safe,
                                erp_thichladi.contact_path, title: "Gửi Lời Nhắn", class: "btn btn-block" %>
                </div>
            </div>
            <!-- End Contact Us Widget -->
        </div>
    </div>
</aside>