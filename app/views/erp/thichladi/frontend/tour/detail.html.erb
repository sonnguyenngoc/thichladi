<% content_for :metas do %>
    <!-- for Facebook -->
    <meta property="og:url" content="<%= request.url %>"/>
    <meta property="og:type" content="website" />
    <% if @title.present? %>
        <meta property="og:title" content="<%= @title.html_safe %>"/>
    <% else %>
        <meta property="og:title" content="ThichLaDi.Info"/>
    <% end %>
    <% if @meta_description.present? %>
        <meta property="og:description" content="<%= @meta_description %>"/>
    <% else %>
        <meta property="og:description" content="Du Lịch Khám Phá Mới - Chuyên tour Miền Tây, Phú Quốc, Bình Ba, Bình Hưng, Nam Du, Hải Tặc. Chuyên tour đoàn, tổ chức event, team building."/>
    <% end %>
    <% if @meta_image.present? %>
        <meta property="og:image" content="http://thichladi.info<%= @meta_image.img_seo %>"/>
    <% else %>
        <meta property="og:image" content="http://thichladi.info/frontend/assets/images/image-for-share.png"/>
    <% end %>    
<% end %>

<div class="page-container ptb-20">
    <div class="container">
        <div class="row row-rl-10 row-tb-20">
            <div class="page-content col-xs-12 col-sm-7 col-md-8">
                <div class="row row-tb-20">
                    <div class="col-xs-12">
                        <div class="deal-deatails panel">
                            <div class="deal-slider">
                                <div id="product_slider" class="flexslider">
                                    <ul class="slides">
                                        <% @tour.tour_images.each do |tour_image| %>
                                        <li><%= image_tag tour_image.image_url.large, alt: @tour.tour_name, title: @tour.tour_name %></li>
                                        <% end %>
                                    </ul>
                                </div>
                                <div id="product_slider_nav" class="flexslider flexslider-nav">
                                    <ul class="slides">
                                        <% @tour.tour_images.each do |tour_image| %>
                                        <li><%= image_tag tour_image.image_url.medium, alt: @tour.tour_name, title: @tour.tour_name %></li>
                                        <% end %>
                                    </ul>
                                </div>
                            </div>
                            <div class="deal-body text-justify p-20"><%= @tour.content.html_safe if @tour.content.present? %></div>                                                        
                        </div>
                    </div>
                    <div class="col-xs-12">
                        <div class="embed-responsive embed-responsive-16by9">
                            <iframe class="google-map-iframe embed-responsive-item" src="http://maps.google.com/maps?q=<%= @tour.map_position %>&amp;z=16&amp;output=embed"></iframe>
                        </div>
                    </div>
                </div>
            </div>
            <div class="page-sidebar col-md-4 col-sm-5 col-xs-12">
                <!-- Blog Sidebar -->
                <%= render "erp/thichladi/frontend/modules/tour/sidebar", tour: @tour %>
                <!-- End Blog Sidebar -->
            </div>
        </div>
    </div>
</div>