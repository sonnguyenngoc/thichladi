<div class="page-container ptb-10">
    <div class="container">
        <div class="row row-rl-10 row-tb-20">
            <div class="page-content col-xs-12 col-sm-8 col-md-9">
                <!-- Checkout Area -->
                <section class="section checkout-area panel prl-30 pt-20 pb-40">
                    <h2 class="h3 mb-20 h-title"><strong>Đặt Tour:</strong> <%= @tour.tour_name %></h2>                    
                    <%= form_for '', url: erp_thichladi.tour_booking_path, html: {class: 'mb-30', id: "booking_tour"} do |f| %>
                        <%= f.hidden_field :tour_id, value: @tour.id %>
                        <input value="<%= params[:tour_id] %>" type="hidden" name="tour_booking[tour_id]" id="tour_booking_tour_id">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>HỌ & TÊN <span class="required">*</span></label>
                                    <input type="text" name="tour_booking[customer_name]" class="form-control required" placeholder="Nhập họ & tên tại đây...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>SỐ ĐIỆN THOẠI <span class="required">*</span></label>
                                    <input type="text" name="tour_booking[customer_phone]" class="form-control required" placeholder="Nhập số điện thoại tại đây...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>ĐỊA CHỈ EMAIL <span class="required">*</span></label>
                                    <input type="email" name="tour_booking[customer_email]" class="form-control required" placeholder="Vui lòng nhập địa chỉ email tại đây...">                                    
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>ĐỊA CHỈ <span class="required">*</span></label>
                                    <input type="text" name="tour_booking[customer_address]" class="form-control required" placeholder="Vui lòng nhập địa chỉ tại đây...">                                                                
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>SỐ NGƯỜI LỚN <span class="required">*</span></label>
                                    <input type="number" value="<%= @tour_booking.number_people_1 %>" name="tour_booking[number_people_1]" class="form-control required" placeholder="Vui lòng nhập số người lớn đăng ký...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>SỐ TRẺ EM (TỪ 11 TUỔI TRỞ LÊN)</label>
                                    <input type="number" value="<%= @tour_booking.number_people_2 %>" name="tour_booking[number_people_2]" class="form-control required" placeholder="Vui lòng nhập số trẻ em đăng ký...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>SỐ TRẺ EM (TỪ 5 TUỔI ĐẾN 11 TUỔI)</label>
                                    <input type="number" value="<%= @tour_booking.number_people_3 %>" name="tour_booking[number_people_3]" class="form-control required" placeholder="Vui lòng nhập số trẻ em đăng ký...">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>SỐ TRẺ EM (DƯỚI 5 TUỔI)</label>
                                    <input type="number" value="<%= @tour_booking.number_people_4 %>" name="tour_booking[number_people_4]" class="form-control required" placeholder="Vui lòng nhập số trẻ em đăng ký...">
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="form-group">
                                    <label>LỜI NHẮN</label>
                                    <textarea type="text" name="tour_booking[note]" class="form-control" placeholder="Nhập lời nhắn tại đây..."></textarea>
                                </div>
                            </div>
                        </div>                                            
                        <button class="btn btn-lg btn-rounded mr-10">ĐẶT TOUR</button>
                    <% end %>
                </section>
                <!-- End Checkout Area -->
            </div>
            <div class="page-sidebar col-xs-12 col-sm-4 col-md-3">
                <!-- Blog Sidebar -->
                <aside class="sidebar blog-sidebar">
                    <div class="row row-tb-10">
                        <div class="col-xs-12">
                            <!-- Recent Posts -->
                            <div class="widget checkout-widget panel p-20">
                                <div class="widget-body">
                                    <table class="table mb-15">
                                        <tbody>
                                            <% if @tour.area_position.present? %>
                                            <tr>
                                                <td class="color-mid"><strong>Địa điểm</strong></td>
                                                <td><%= @tour.area_position %></td>
                                            </tr>
                                            <% end %>
                                            <% if @tour.hotel.present? %>
                                            <tr>
                                                <td class="color-mid"><strong>Khách sạn/Resort</strong></td>
                                                <td><%= @tour.hotel %></td>
                                            </tr>
                                            <% end %>
                                            <% if @tour.transportation.present? %>
                                            <tr>
                                                <td class="color-mid"><strong>Phương tiện</strong></td>
                                                <td><%= @tour.transportation %></td>
                                            </tr>
                                            <% end %>
                                            <% if @tour.time_line.present? %>
                                            <tr>
                                                <td class="color-mid"><strong>Thời gian</strong></td>
                                                <td><%= @tour.time_line %></td>
                                            </tr>
                                            <% end %>
                                            <tr class="font-15">
                                                <td class="color-mid"><strong>GIÁ TOUR</strong></td>
                                                <td class="color-green"><strong><%= format_price(@tour.price) %></strong></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <!-- End Recent Posts -->
                        </div>
                    </div>
                </aside>
                <!-- End Blog Sidebar -->
            </div>
        </div>
    </div>
</div>
