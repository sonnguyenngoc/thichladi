<!-- Page Container -->
<div class="page-container ptb-30">
    <div class="container">
        <div class="row row-rl-10 row-tb-20">
            <div class="page-content col-xs-12 col-sm-7 col-md-8">
                <!-- Blog Area -->
                <div class="blog-area blog-single-post">
                    <div class="row row-tb-20">
                        <!-- Blog Post -->
                        <div class="blog-post col-xs-12">
                            <article class="entry panel">
                                <figure class="entry-media post-thumbnail embed-responsive embed-responsive-16by9" data-bg-img="<%= @about_us.image_url.large if @about_us.image_url.present? %>" style="background-image: url(&quot;<%= @about_us.image_url.large if @about_us.image_url.present? %>&quot;);">
                                </figure>
                                <div class="entry-wrapper prl-20 prl-md-30 pt-20 pt-md-30 pb-15">
                                    <header class="entry-header">
                                        <h1 class="entry-title mb-10 mb-md-15">
                                            GIỚI THIỆU
                                        </h1>
                                    </header>
                                    <div class="entry-content text-justify">
                                        <%= @about_us.content.html_safe if @about_us.content.present? %>
                                    </div>
                                    <!-- .entry-wrapper -->
                                    <footer class="entry-footer">
                                        <ul class="share-buttons ptb-20">
                                            <li><a class="fb-share" href="#"><i class="fa fa-facebook"></i> Share</a>
                                            </li>
                                            <li><a class="gplus-share" href="#"><i class="fa fa-google-plus"></i> Share</a>
                                            </li>
                                        </ul>
                                    </footer>
                                </div>
                            </article>                            
                        </div>
                        <!-- End Blog Post -->                        
                    </div>
                </div>
                <!-- End Blog Area -->
            </div>
            <div class="page-sidebar col-md-4 col-sm-5 col-xs-12">
                <!-- Blog Sidebar -->
                <aside class="sidebar blog-sidebar">
                    <div class="row row-tb-10">
                        <div class="col-xs-12">
                            <!-- Categories Widget -->
                            <div class="widget categories-widget panel pt-20 prl-20">
                                <div class="widget-header">
                                    <h3 class="widget-title h-title">THÔNG TIN KHÁCH HÀNG</h3>
                                </div>
                                <div class="widget-body ptb-20">
                                    <ul>
                                        <li>
                                            <a href="">Hướng Dẫn Đặt Tour</a>
                                        </li>
                                        <li>
                                            <a href="">Hướng Dẫn Đặt Tour</a>
                                        </li>
                                        <li>
                                            <a href="">Hướng Dẫn Đặt Tour</a>
                                        </li>
                                        <li>
                                            <a href="">Hướng Dẫn Đặt Tour</a>
                                        </li>
                                        <li>
                                            <a href="">Hướng Dẫn Đặt Tour</a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                            <!-- End Categories Widget -->
                        </div>                        
                        <%= render "erp/thichladi/frontend/modules/newsletter" %>
                        <%= render "erp/thichladi/frontend/modules/contact" %>                        
                    </div>
                </aside>
                <!-- End Blog Sidebar -->
            </div>
        </div>
    </div>
</div>
<!-- End Page Container -->